{% extends 'base.html.twig' %}

{% block title %} Cocktails ! {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container-fluid">
    <div class="row flex-nowrap">
        {{ include('navbar/sidenavbar.html.twig') }}

        <div class="col py-3">
            <h1>Nos Cocktails</h1>

            Vous trouverez si dessous tout vos coktail préféré et bien plus encore 
            {% for cocktail in cocktails %}
                {% if cocktail.priority %}
                    <p> Votre cocktail du mois : {{ cocktail.label }} </p>
                {% endif %}
            {% endfor %}
            <div class="card-deck">
                {% for cocktail in cocktails %}
                    {% if cocktail.active %}
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ cocktail.label }}</h5>
                                    <p class="card-text">{{ cocktail.description }}</p>
                                    <a href="#" class="btn btn-primary">Voir plus</a>
                                    <a href="#" class="btn btn-primary">Commander</a>
                                </div>
                                <div class="card-footer bg-transparent border-dark">
                                    <!-- TAGS -->
                                </div>
                            </div>
                        </div> 
                    {% endif %}
                {% endfor %}
            </div>  
        
        </div>
    </div>
</div>
{% endblock %}
